rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Classes collection - user must own the class
    match /classes/{classId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      
      // Students sub-collection
      match /students/{studentId} {
        allow read: if isAuthenticated() && get(/databases/$(database)/documents/classes/$(classId)).data.user_id == request.auth.uid;
        allow create: if isAuthenticated() && get(/databases/$(database)/documents/classes/$(classId)).data.user_id == request.auth.uid;
        allow update, delete: if isAuthenticated() && get(/databases/$(database)/documents/classes/$(classId)).data.user_id == request.auth.uid;
      }
    }
    
    // Learning Goals (TP) collection
    match /learning_goals/{goalId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
    
    // Question Banks collection
    match /question_banks/{questionBankId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
    
    // Bank Soal collection
    match /bank_soal/{soalId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
    
    // Exam Templates collection
    match /exam_templates/{templateId} {
      allow read: if isAuthenticated() && (resource.data.user_id == request.auth.uid || !exists(resource.data.user_id));
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
    
    // Grades collection
    match /grades/{gradeId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if false; // Prevent deletion
    }
    
    // Audit logs collection (server-only writes, user can read their own)
    match /audit_logs/{logId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null; // Server-side operations only
      allow update, delete: if false; // Immutable audit logs
    }
    
    // Email verification records (server-only writes, user can read/update their own)
    match /email_verifications/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create, update: if request.auth != null; // Server-side operations only
      allow delete: if false; // Keep verification records
    }

